<h1 class="text-3xl font-semibold mb-10 text-black/80">
  Analytics
</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">

  <!-- Total Items -->
  <div class="rounded-2xl bg-white/70 backdrop-blur-md shadow p-6">
    <p class="text-xs uppercase tracking-wide text-slate-400">
      Total Items
    </p>
    <p class="text-3xl font-bold mt-2 text-slate-900">
      <%= @items_count %>
    </p>
  </div>

  <!-- Total Quantity -->
  <div class="rounded-2xl bg-emerald-50/70 backdrop-blur-md shadow p-6">
    <p class="text-xs uppercase tracking-wide text-emerald-600">
      Total Quantity
    </p>
    <p class="text-3xl font-bold mt-2 text-emerald-900">
      <%= @total_quantity %>
    </p>
  </div>

  <!-- Most Stocked -->
  <div class="rounded-2xl bg-indigo-50/70 backdrop-blur-md shadow p-6">
    <p class="text-xs uppercase tracking-wide text-indigo-600">
      Most Stocked
    </p>
    <p class="text-lg font-semibold mt-2 text-indigo-900 truncate">
      <%= @highest_item&.name || "N/A" %>
    </p>
    <p class="text-sm text-indigo-700">
      Qty: <%= @highest_item&.quantity || 0 %>
    </p>
  </div>

  <!-- Lowest Stock -->
  <div class="rounded-2xl bg-amber-50/70 backdrop-blur-md shadow p-6">
    <p class="text-xs uppercase tracking-wide text-amber-600">
      Lowest Stock
    </p>
    <p class="text-lg font-semibold mt-2 text-amber-900 truncate">
      <%= @lowest_item&.name || "N/A" %>
    </p>
    <p class="text-sm text-amber-700">
      Qty: <%= @lowest_item&.quantity || 0 %>
    </p>
  </div>

</div>
