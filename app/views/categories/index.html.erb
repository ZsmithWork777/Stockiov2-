<h1>Categories</h1>

<%= link_to "New Category", new_category_path, class: "bg-blue-600 text-white px-3 py-1 rounded" %>

<ul class="mt-6 space-y-4">
  <% @categories.each do |category| %>
    <li class="border p-4 rounded shadow">
      <%= category.name %>

      <div class="mt-2 space-x-2">
        <%= link_to "Show", category_path(category), class: "px-3 py-1 bg-gray-100 rounded" %>
        <%= link_to "Edit", edit_category_path(category), class: "px-3 py-1 bg-gray-100 rounded" %>
        <%= link_to "Delete", category_path(category), method: :delete, class: "px-3 py-1 bg-red-600 text-white rounded" %>
      </div>
    </li>
  <% end %>
</ul>
