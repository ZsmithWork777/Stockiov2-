<div class="min-h-[70vh]">

  <!-- Header -->
  <div class="flex items-center justify-between mb-10">
    <h1 class="text-4xl font-semibold text-black/80">
      Categories
    </h1>

    <%= link_to "New Category",
          new_category_path,
          class: "rounded-full bg-blue-600 px-6 py-3 text-sm font-medium text-white shadow hover:bg-blue-500 transition" %>
  </div>

  <!-- Glass container -->
  <div class="rounded-3xl bg-white/60 backdrop-blur-xl shadow-md p-8">

    <% if @categories.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% @categories.each do |category| %>

          <div class="flex items-center justify-between rounded-2xl bg-white/80 px-6 py-5 shadow-sm">

            <!-- Category name -->
            <span class="text-lg font-medium text-black/80">
              <%= category.name %>
            </span>

            <!-- Actions -->
            <div class="flex gap-2">
              <%= link_to "Show",
                    category_path(category),
                    class: "rounded-full bg-gray-100 px-4 py-2 text-sm text-black/70 hover:bg-gray-200 transition" %>

              <%= link_to "Edit",
                    edit_category_path(category),
                    class: "rounded-full bg-gray-100 px-4 py-2 text-sm text-black/70 hover:bg-gray-200 transition" %>

           <%= link_to "Delete",
      category_path(category),
      data: {
        turbo_method: :delete,
        turbo_confirm: "Delete this category and all its items?"
      },
      class: "rounded-full bg-red-500 px-4 py-2 text-sm text-white hover:bg-red-400 transition" %>
            </div>

          </div>

        <% end %>
      </div>
    <% else %>
      <p class="text-black/50 text-center">
        No categories yet.
      </p>
    <% end %>

  </div>

</div>
