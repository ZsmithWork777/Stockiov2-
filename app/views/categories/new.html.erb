<h2 class="text-2xl font-semibold mb-6">New Category</h2>

<%= form_with model: @category do |f| %>

  <div class="mb-6">
    <%= f.label :name, class: "block text-sm font-medium mb-2 text-black/70" %>

    <%= f.text_field :name,
      placeholder: "e.g. Electronics",
      class: "
        w-full
        rounded-xl
        bg-white/80
        backdrop-blur-md
        border border-black/10
        px-4 py-2.5
        text-sm
        placeholder-black/40
        shadow-sm
        transition
        focus:outline-none
        focus:ring-4 focus:ring-blue-500/20
        focus:border-blue-500
      "
    %>
  </div>

  <div class="flex gap-3">
    <%= f.submit "Create Category",
      class: "
        rounded-xl
        bg-blue-600
        text-white
        px-5 py-2.5
        text-sm
        font-medium
        shadow-md
        transition
        hover:bg-blue-700
        hover:shadow-lg
        active:scale-[0.98]
      "
    %>

    <%= link_to "Cancel",
      categories_path,
      class: "
        rounded-xl
        bg-white/60
        backdrop-blur-md
        border border-black/10
        px-5 py-2.5
        text-sm
        text-black/70
        transition
        hover:bg-white/80
      "
    %>
  </div>

<% end %>
