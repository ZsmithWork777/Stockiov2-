<% content_for :title, "New Item" %>

<div class="min-h-[70vh] flex items-center justify-center px-4">
  <div class="w-full max-w-lg">

    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-black/90">New Item</h1>
      <p class="mt-2 text-black/60">
        Add a new item to your inventory
      </p>
    </div>

    <!-- Glass Card -->
    <div class="rounded-3xl bg-white/70 backdrop-blur-xl shadow-xl p-8">

      <!-- ✅ Turbo target -->
      <div id="item_form">
        <%= render "form", item: @item %>
      </div>

      <!-- Back link -->
      <div class="mt-6 text-center">
        <%= link_to "← Back to items",
              items_path,
              class: "text-sm text-black/60 hover:text-black transition" %>
      </div>

    </div>
  </div>
</div>
