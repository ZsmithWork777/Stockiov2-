<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center">

  <!-- SCALE CONTAINER -->
  <div class="w-full h-full scale-[0.85] origin-center">

    <!-- TWO COLUMN LAYOUT -->
    <div class="min-h-screen grid grid-cols-1 md:grid-cols-2 relative">

      <!-- LEFT BRAND PANEL -->
      <div class="hidden md:flex flex-col justify-center px-24">
        <h1 class="text-7xl font-bold text-gray-900 mb-8">
          StockIO
        </h1>

        <p class="text-2xl text-gray-600 max-w-lg mb-10">
          A clean inventory system to track items, organize categories, and analyze stock movement with clarity.
        </p>

        <ul class="space-y-5 text-xl text-gray-700">
          <li>• Inventory tracking in real time</li>
          <li>• Category-based organization</li>
          <li>• Built-in analytics dashboard</li>
        </ul>
      </div>

      <!-- RIGHT LOGIN PANEL -->
      <div class="flex items-center justify-center relative">

        <!-- BACKDROP PANEL -->
        <div class="absolute inset-y-0 right-0 w-3/5 bg-white/40 backdrop-blur-sm"></div>

        <!-- LOGIN CARD -->
        <div class="relative w-full max-w-lg bg-white rounded-2xl shadow-xl p-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-2 text-center">
            Login
          </h2>

          <p class="text-gray-500 text-center mb-8">
            Sign in to your account
          </p>

          <% if flash[:alert] %>
            <div class="mb-6 rounded-md bg-red-50 p-3 text-red-700 text-sm">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <%= form_with url: login_path, method: :post, data: { turbo: false } do %>

            <!-- EMAIL -->
            <div class="mb-6">
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Email
              </label>
              <%= email_field_tag :email, nil,
                class: "w-full rounded-lg border-gray-300 px-4 py-2 focus:ring-indigo-500 focus:border-indigo-500" %>
            </div>

            <!-- PASSWORD -->
            <div class="mb-8">
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Password
              </label>
              <%= password_field_tag :password, nil,
                class: "w-full rounded-lg border-gray-300 px-4 py-2 focus:ring-indigo-500 focus:border-indigo-500" %>
            </div>

            <!-- SUBMIT -->
            <%= submit_tag "Log In",
              class: "w-full rounded-lg bg-indigo-600 py-3 text-white text-lg font-semibold hover:bg-indigo-700 transition" %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
