<%= turbo_frame_tag dom_id(item) do %>
  <div class="bg-white shadow-sm border border-gray-200 rounded-lg p-5 flex items-center justify-between hover:shadow transition">

    <!-- LEFT SIDE -->
    <div>
      <p class="font-semibold text-lg"><%= item.name %></p>
      <p class="text-gray-600">Quantity: <%= item.quantity %></p>

      <span class="inline-block px-2 py-1 rounded text-sm mt-1
        <%= case item.category&.name
            when "Electronics" then "bg-blue-100 text-blue-600"
            when "Accessories" then "bg-purple-100 text-purple-600"
            when "Food & Beverages" then "bg-green-100 text-green-600"
            when "Home" then "bg-gray-100 text-gray-600"
            when "Hardware" then "bg-orange-100 text-orange-600"
            else "bg-gray-100 text-gray-500"
        end %>">
        <%= item.category&.name || "None" %>
      </span>
    </div>

    <!-- RIGHT SIDE ACTIONS -->
    <div class="flex gap-2">
      <%= link_to "Show", item, class: "bg-gray-100 px-3 py-1 rounded hover:bg-gray-200" %>
      <%= link_to "Edit", edit_item_path(item), class: "bg-gray-100 px-3 py-1 rounded hover:bg-gray-200" %>

      <%= link_to "Destroy",
          item_path(item),
          data: { turbo_method: :delete, turbo_confirm: "Delete this item?" },
          class: "bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600" %>
    </div>

  </div>
<% end %>
