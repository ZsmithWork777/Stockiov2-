<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-50 to-blue-100 px-4">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">

    <h1 class="text-3xl font-bold text-gray-900 text-center mb-2">
      Create Account
    </h1>

    <p class="text-gray-500 text-center mb-6">
      Sign up to access StockIO
    </p>

    <% if @user.errors.any? %>
      <div class="mb-4 rounded-md bg-red-50 p-3 text-red-700 text-sm">
        <ul class="list-disc ml-5">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: signup_path, local: true do |f| %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, required: true,
          class: "w-full rounded-lg border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, required: true,
          class: "w-full rounded-lg border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, required: true,
          class: "w-full rounded-lg border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <%= f.submit "Create Account",
        class: "w-full rounded-lg bg-indigo-600 py-2 text-white font-semibold hover:bg-indigo-700 transition" %>

    <% end %>

    <p class="mt-6 text-center text-sm text-gray-600">
      Already have an account?
      <%= link_to "Log in", login_path, class: "text-indigo-600 hover:underline font-medium" %>
    </p>

  </div>
</div>
